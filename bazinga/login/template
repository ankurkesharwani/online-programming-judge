<script type="text/javascript">

function hasOnlyLetters(text)
{
	for(var i=0;i<text.length;i++)
	{
		if(!((text.charCodeAt(i)>=97&&text.charCodeAt(i)<=122)||(text.charCodeAt(i)>=65&&text.charCodeAt(i)<=90)||(text.charCodeAt(i)==32)))
			return false;
	}
	return true;
}
function hasOnlyNumbers(text)
{
	for(var i=0;i<text.length;i++)
	{
		if(!(text.charCodeAt(i)>=48&&text.charCodeAt(i)<=57))
			return false;
	}
	return true;
}
function isValidEmailId(text)
{
	var atpos=text.indexOf("@");
	var dotpos=text.lastIndexOf(".");
	if (atpos<1 || dotpos<atpos+2 || dotpos+2>=text.length)
		return false;
	else 
		return true;
}
function verify_registration_form()
{
	if(document.getElementById('name').value=="")
	{
		alert('Did you forget to mention your user name?');
		return false;
	}
	else if(!hasOnlyLetters(document.getElementById('name').value))
	{
		alert('Only letters are allowed for Name.');
		return false;
	}
	if(document.getElementById('loc').value=="")
	{
		alert('Please tell us where you live.');
		return false;
	}
	else if(!hasOnlyLetters(document.getElementById('loc').value))
	{
		alert('Only letters are allowed for location.');
		return false;
	}
	if(document.getElementById('occupation').value=="")
	{
		alert('Please tell us what you do.');
		return false;
	}
	else if(!hasOnlyLetters(document.getElementById('occupation').value))
	{
		alert('Only letters are allowed for occupation.');
		return false;
	}
	//else if(!isValidEmailId(document.getElementById('email').value))
	//{
	//	alert('Please provide a valid Email ID?');
	//		return false;
	//}
	else if(document.getElementById('email_id').value=="")
	{
		alert('Did you forget to mention your Email ID?');
		return false;
	}
	else if(document.getElementById('password').value==""||document.getElementById('confirm_password').value=="")
	{
		alert('Please enter a password and confirm it.');
		return false;
	}
	else if(document.getElementById('password').value!=document.getElementById('confirm_password').value)
	{
		alert('You might want to reconsider your password');
		document.getElementById('confirm_password').value=""
		return false;
	}	
}
</script>

